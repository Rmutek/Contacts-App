<h1>New Contact</h1>
<%= form_tag "/contacts", method: :post do %>

  <div class="form-group">First Name: <input class="form-control" type="text" name="first_name"></div>
  <div class="form-group">Last Name: <input class="form-control" type="text" name="last_name"></div>
  <div class="form-group">Middle Name: <input class="form-control" type="text" name="middle_name"></div>
  <div class="form-group">Phone: <input class="form-control" type="text" name="phone_number"></div>
  <div class="form-group">Email: <input class="form-control" type="text" name="email"></div>
  <input type="submit" name="Add Contact">
<%end%>